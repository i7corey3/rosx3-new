<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro"  name="robot">

    <xacro:include filename="inertial_macros.xacro"/>

<material name="white">
        <color rgba="1 1 1 1" />
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 1" />
    </material>

    <material name="blue">
        <color rgba="0.2 0.2 1 1" />
    </material>

    <material name="black">
        <color rgba="0 0 0 1" />
    </material>

    <material name="red">
        <color rgba="1 0 0 1" />
    </material>

    <!--Base link-->


    <link name="base_link">
        
    </link>

    <!--Chassis link-->
    
    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
    </joint>
    
    <link name="chassis">
        <visual>
            <origin xyz="0.0 0.0 0.09"/>
            <geometry>
                <box size="0.241 0.195 0.2"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.09"/>
            <geometry>
                <box size="0.241 0.195 0.2"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.5" x="0.241" y="0.195" z="0.2">
            <origin xyz="0.0 0.0 0.09" rpy="0.0 0.0 0.0"/>
        </xacro:inertial_box> 
    </link>

    <!--Right Rear Wheel -->


    <joint name="Right_Rear_wheel_j" type="continuous">
        <parent link="base_link"/>
        <child link="Right_Rear_wheel"/>
        <origin xyz="-0.075 0.109 0.0" rpy="-${pi/2} 0.0 0.0"/>
        <axis xyz="0.0 0.0 1"/>
    </joint>

    <link name="Right_Rear_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.0285" length="0.025"/>
            </geometry>
            <material name="Blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.0285" length="0.025"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.025" radius="0.0285">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        </xacro:inertial_cylinder>
    </link>

    <!--Right Front Wheel -->

    <joint name="Right_Front_wheel" type="continuous">
        <parent link="base_link"/>
        <child link="Right_Front_wheel"/>
        <origin xyz="0.075 0.109 0.0" rpy="-${pi/2} 0.0 0.0"/>
        <axis xyz="0.0 0.0 1"/>
    </joint>

    <link name="Right_Front_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.0285" length="0.025"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.0285" length="0.025"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.025" radius="0.0285">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        </xacro:inertial_cylinder>
    </link>

    <!--Left Rear Wheel -->

<joint name="left_Rear_wheel" type="continuous">
        <parent link="base_link"/>
        <child link="Left_Rear_wheel"/>
        <origin xyz="-0.075 -0.109 0.0" rpy="-${pi/2} 0.0 0.0"/>
        <axis xyz="0.0 0.0 1"/>
    </joint>

    <link name="Left_Rear_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.0285" length="0.025"/>
            </geometry>
            <material name="Blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.0285" length="0.025"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.025" radius="0.0285">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        </xacro:inertial_cylinder>
    </link>

   <!--Left Front Wheel -->

    <joint name="Left_Front_wheel" type="continuous">
        <parent link="base_link"/>
        <child link="Left_Front_wheel"/>
        <origin xyz="0.075 -0.109 0.0" rpy="-${pi/2} 0.0 0.0"/>
        <axis xyz="0.0 0.0 1"/>
    </joint>

    <link name="Left_Front_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.0285" length="0.025"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.0285" length="0.025"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.025" radius="0.0285">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        </xacro:inertial_cylinder>
    </link>

     <!--Caster Wheel Link-->

     <joint name="caster_wheel_link" type="fixed">
        <parent link="chassis"/>
        <child link="caster_wheel"/>
        <origin xyz="0.0 0.0 0.0"/>
     </joint>


     <link name="caster_wheel">
        <visual>
            <geometry>
                <sphere radius="0.0285"/>
            </geometry>
            <material name="orange"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.0285"/>
            </geometry>
        </collision>
        <xacro:inertial_sphere mass="0.1" radius="0.0285">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        </xacro:inertial_sphere>    
     </link>
</robot>